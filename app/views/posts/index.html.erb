<h3>スケジュル一覧</h3>


 <% if flash[:notice] %>
   <p class="notice"><%= flash[:notice] %></p>
 <% end %>

<table>
  <thead>
    <tr>
      <th>id</th>
      <th>タイトル</th>
      <th>開始日</th>
      <th>終了日</th>
      <th>終日</th>
      <th>更新日</th>
      <th>確認</th>
      <th>編集</th>
      <th>削除</th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.id %></td>
        <td><%= post.title %></td>
        <td><%= post.start %></td>
        <td><%= post.finish %></td>
        <td>
        
        <%= if post.day_all == true 
                "○" 
            else 

            end%>
                
        </td>
        <td><%= post.updated_at.strftime("%Y-%m-%d %H:%M:%S") %></td>
        <td><%= link_to "確認", post %></td>
        <td><%= link_to "編集", [:edit, post] %></td>
        <td><%= button_to "削除", post, :method => :delete, data: { turbo_confirm: "本当に削除しますか？" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<p><%= link_to "スケジュール新規登録", :new_post %></p>